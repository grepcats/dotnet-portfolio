@model Portfolio.Models.BlogPost

@using (Html.BeginForm("Update", "BlogPost"))
{
    @Html.HiddenFor(model => model.BlogPostId)
    @Html.HiddenFor(model => model.Author)
    @Html.HiddenFor(model => model.PostDate)
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TextBody)
        @Html.TextAreaFor(x => x.TextBody, new { @class = "form-control" })
    </div>
    

    <input type="submit" value="Update" class="btn btn-default" />

}
