@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Portfolio.ViewModels

@model RegisterViewModel

<h2>Register as a New User</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(user => user.Email)
        @Html.TextBoxFor(user => user.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(user => user.Password)
        @Html.PasswordFor(user => user.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(user => user.ConfirmPassword)
        @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(user => user.UserRoleId)
        <select name="role" id="role" class="form-control">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>

    <input type="submit" value="Register" class="btn btn-default"/>
}
